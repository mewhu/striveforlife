        <option value="8">8人</option>
        <option value="9">9人</option>
        <option value="10">10人</option>
        <option value="11" selected="selected">11人</option>
      </select>
      <script>
        $(document).ready(function(){
          // 網路上找到的jquery簡單的點擊事件切換display及hide範例
          // $("#bb").click(function(){
